<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:screenOrientation="landscape"
                tools:context="us.lucidian.instacount.SettingsFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:keepScreenOn="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/background_cut_tile"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_cut_tile"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gaussian Blur Amount:"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:layout_marginLeft="25dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35.0dip"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5.0dip">
                    <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/blur_size_seek_bar"
                        android:max="@string/max_blur_size"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="3"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:text="Value"
                        android:id="@+id/blur_size_tv"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_cut_tile"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum Distance Between Two Circle Centers:"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:layout_marginLeft="25dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35.0dip"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5.0dip">
                    <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/min_distance_seek_bar"
                        android:max="@string/max_min_distance"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="3"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:text="Value"
                        android:id="@+id/min_distance_tv"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_cut_tile"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum Radius of a Circle:"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:layout_marginLeft="25dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35.0dip"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5.0dip">
                    <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/min_radius_seek_bar"
                        android:max="@string/max_min_radius"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="3"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:text="Value"
                        android:id="@+id/min_radius_tv"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_cut_tile"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximum Radius of a Circle:"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:layout_marginLeft="25dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35.0dip"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5.0dip">
                    <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/max_radius_seek_bar"
                        android:max="@string/max_max_radius"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="3"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:text="Value"
                        android:id="@+id/max_radius_tv"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_cut_tile"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Canny Edge Detection Threshold:"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:layout_marginLeft="25dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35.0dip"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5.0dip">
                    <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/canny_threshold_seek_bar"
                        android:max="@string/max_canny_threshold"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="3"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:text="Value"
                        android:id="@+id/canny_threshold_tv"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_cut_tile"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accumulator Threshold for Circle Center Detection:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_marginLeft="25dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35.0dip"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5.0dip">
                    <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/accumulator_threshold_seek_bar"
                        android:max="@string/max_accumulator_threshold"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="3"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:text="Value"
                        android:id="@+id/accumulator_threshold_tv"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footer"
        style="?android:attr/buttonBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_settings_reset"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset"/>

        <Button
            android:id="@+id/btn_settings_save"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"/>
    </LinearLayout>

</RelativeLayout>